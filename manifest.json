{
  "name": "Clear Clipboard",
  "author": "Leon Arber",
  "version": "1.5",
  "description": "Clears the clipboard after incognito usage.",
  "manifest_version": 3,
  "permissions": [
    "windows",
    "storage",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Clear Clipboard"
  },  
  "icons" : {
        "128" : "klipper_128.png",
        "48" : "klipper_48.png",
        "16" : "klipper_16.png"
    }

}
