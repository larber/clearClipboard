  {
    "name": "Clear Clipboard",
    "author": "Leon Arber",
    "version": "1.1",
    "description": "Clears clipboard after exiting incognito mode",
	"permissions" : ["clipboardWrite"],
    "manifest_version": 2,
    "background": {
      "scripts": ["background.js"],
      "persistent": true 
    },
    "icons" : {
        "128" : "klipper_128.png",
        "48" : "klipper_48.png",
        "16" : "klipper_16.png"
    }
  }
